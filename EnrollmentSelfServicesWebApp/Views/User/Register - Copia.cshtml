@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutIdentity2.cshtml";
}
<br />
<div class="card customCardLogin" style="width: 102%;  display: inline-block;">
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-1 hiddenOnSmall">
                <a class="mt-2" onclick="RedirectToLogin();">
                    <img src=@Url.Content("~/wwwroot/images/back_icon.png") class="mt-3 ml-3 mr-3" style="width:35px; height:35px;" />
                </a>
            </div>
            <div class="col-md-11">
                <h5 class="mt-2" data-i18n="registerUser_title">Ingresa su identificación personal</h5>
                <p data-i18n="registerUser_subTitle">Antes de que puedas acceder a su cuenta, tienes que confirmar su identidad.</p>
            </div>
        </div>
        <form id="registerForm" class="needs-validation" novalidate>            
            <input type="hidden" id="register-isFirstPage-field" class="form-control" value="true">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input required maxlength="30" id="register-names-field" class="form-control" name="user" data-i18n="[placeholder]registerUser_nombres" placeholder="Nombres">
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input required maxlength="30" id="register-lastnameOne-field" class="form-control" name="user" data-i18n="[placeholder]registerUser_primerapellido" placeholder="Primer Apellido">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input required maxlength="30" id="register-lastNameTwo-field" class="form-control" name="user" data-i18n="[placeholder]registerUser_segundoapellido" placeholder="Segundo Apellido">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-id-card"></i></span>
                                        </div>
                                        <input required maxlength="4" id="register-ssn-field" class="form-control" data-i18n="[placeholder]registerUser_ssn" name="user" placeholder="SSN">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-map-marker-alt"></i></span>
                                        </div>
                                        <input maxlength="50" required id="register-zipcode-field" class="form-control" data-i18n="[placeholder]registerUser_zipcode" name="user" placeholder="Zip Code">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>               
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <input required type="hidden" id="register-birthdate-field" class="form-control" name="birthday" data-i18n="[placeholder]registerUser_fechanacimiento" placeholder="Fecha de Nacimiento">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 hiddenOnSmall">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <p style="vertical-align:central!important;" data-i18n="registerUser_fechanacimiento">Fecha de nacimiento</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
                                        </div>
                                        <input type="email" required id="register-username-field" class="form-control" name="user" data-i18n="[placeholder]registerUser_email" placeholder="Correo Electrónico">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 hiddenOnSmall">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <p data-i18n="registerUser_email_info">El correo electrónico será su usuario para acceder a su cuenta</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock"></i></span>
                                        </div>
                                        <input maxlength="30" data-minlength="8" required id="register-password-field" class="form-control" type="password" name="password" data-i18n="[placeholder]registerUser_password" placeholder="Contraseña">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-unlock"></i></span>
                                        </div>
                                        <input maxlength="30" data-minlength="8" required id="register-confirm-password-field" class="form-control" type="password" name="password" data-i18n="[placeholder]registerUser_confirmpassword" placeholder="Confirmar Contraseña">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 hiddenOnSmall">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <p data-i18n="registerUser_password_info_one" class="font-weight-bold">La contraseña debe contener:</p>
                                    <p data-i18n="registerUser_password_info_two"> 8 a 20, caracteres</p>
                                    <p data-i18n="registerUser_password_info_three"> Números</p>
                                    <p><span data-i18n="registerUser_password_info_four">Caracteres especiales como</span> #$%&'()*+,-./:;<=>?[\]^_`{|}~</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group" style="width:100%;">
                                    <input type="submit" style="width:100%;" data-i18n="[value]registerUser_btn" value="Registrar" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <span data-i18n="login_disclaimer_partOne">Al ingresar, estás de acuerdo con los </span>
                    <a href="#" data-i18n="login_disclaimer_TerminosDeServicio" data-toggle="modal" data-target="#terminosDeServicioModal">Términos de servicio</a>,
                    <a href="#" data-i18n="login_disclaimer_DeclaracionPrivacidad" data-toggle="modal" data-target="#privacidadModal">Declaración de privacidad</a>,
                    <span data-i18n="login_disclaimer_partTwo">y</span>
                    <a href="#" data-i18n="login_disclaimer_AvisoDeCookies" data-toggle="modal" data-target="#cookiesModal">Aviso de cookies</a>.</p>
                </div>
                @*<div class="col-md-2">
                        <p><a href="#" class="helpLink">Ayuda <i class="far fa-question-circle"></i></a></p>
                    </div>*@
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/wwwroot/lib/jquery.redirect/dist/jquery.redirect.js"></script>
    <script src="~/wwwroot/lib/jquery.date-dropdowns/dist/jquery.date-dropdowns.min.js"></script>
    <script src="~/wwwroot/js/site.js"></script>
    <script src="~/wwwroot/js/RegisterUserJS.js"></script>
    <script>
        var urlLogin = '@Url.Action("Login", "User")';
        var urlRegister = '@Url.Action("Register", "User")';
        var urlRegisterWithQuestion = '@Url.Action("RegisterWithQuestions", "User")';
        var urlSecurityQuestions = '@Url.Action("Get", "SecurityQuestion")';
    </script>
}

