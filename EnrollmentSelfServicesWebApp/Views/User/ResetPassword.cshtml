@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutResetPassword.cshtml";
}
<br />
<div class="customCardReset d-flex justify-content-center">
    <div class="card col-md-4">
        <div class="card-body">
            <div class="row">
                <div class="col-2 mb-2">
                    <a onclick="RedirectToLogin();">
                            <img src=@Url.Content("~/wwwroot/images/back_icon.png") class="mt-3 mr-3" style="width:35px; height:35px;" />
                        </a>

                </div>
                <div class="col-10">
                    <h5 class="mt-2" data-i18n="restaurarpassword_title">Restaurar contraseña</h5>
                </div>
                <div class="w-100"></div>
                <div class="col">
                    <p data-i18n="restaurarpassword_subtitle">Enviaremos un enlace para restaurar su contraseña.</p>
                </div>
            </div>

            <form id="resetPasswordForm" class="needs-validation" novalidate>
                <div class="form-row">
                    <div class="col-12 mb-3">
                        <input type="email" required id="resetpassword-user-field" class="form-control" name="user" data-i18n="[placeholder]registerUser_email" placeholder="Correo Electrónico">
                        <div class="invalid-feedback" data-i18n="registerUser_email_validation"></div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-12 mb-3">
                        <input id="btnResetPasswordSubmit" type="submit" style="width:100%;" data-i18n="[value]restaurarpassword_btn" value="Restaurar" />
                    </div>
                </div>
                @*<div class="row">
                        <div class="col-md-10"></div>
                        <div class="col-md-2  text-center">
                            <div class="row">
                                <span class="fa fa-question-circle fa-2x text-center"></span>
                            </div>
                            <div class="row">
                                <p class="text-center">Ayuda</p>
                            </div>
                        </div>
                    </div>*@
            </form>

        </div>
    </div>
</div>



@section scripts{
    <script src="~/wwwroot/lib/jquery.redirect/dist/jquery.redirect.js"></script>
    <script src="~/wwwroot/lib/jquery.date-dropdowns/dist/jquery.date-dropdowns.js"></script>
    <script src="~/wwwroot/js/site.js"></script>    
    <script src="~/wwwroot/js/LoginAndResetJS.js"></script>
    <script>
        var urlResetPassword = '@Url.Action("ResetPassword", "User")';
        var urlLogin = '@Url.Action("Login", "User")';
    </script>
}

