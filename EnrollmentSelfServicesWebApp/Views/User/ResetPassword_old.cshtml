@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutIdentity.cshtml";
}
<br />
<div class="card customCardLogin" style="width: 20rem;" display: inline-block;">
    <img class="card-img-top logoCardHeader" src="~/wwwroot/images/Logon_Logo_Header.jpg" alt="">
    <div class="card-body">
        <p>Enviaremos un enlace para restaurar su contraseña.</p>
        <form id="resetPasswordForm" role="form" data-toggle="validator" action="">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="form-group" style="width:100%;">
                                <div class="col-md-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-at"></i></span>
                                        </div>
                                        <input id="resetpassword-user-field" required type="email" maxlength="500" class="form-control" name="user" placeholder="Correo Electrónico" aria-describedby="inputGroupPrepend">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" style="width:100%;">
                        <div class="col-md-12">
                            <input id="btnResetPasswordSubmit" type="submit" style="width:100%;" value="Recuperar Contraseña" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                @*<div class="row">
                    <div class="form-group" style="width:100%;">
                        <div class="col-md-12">
                            <input id="btnCancel" style="width:100%;" value="Cancelar" class="btn btn-inverse"  onclick="RedirectToLogin();" />
                        </div>
                    </div>
                </div>*@
                <div class="row" style="float: right;">
                    <div class="form-group">
                        <div class="col-md-12">
                            <p><a href="#" class="helpLink">Ayuda <i class="far fa-question-circle"></i></a></p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script src="~/wwwroot/js/site.js"></script>
    <script src="~/wwwroot/js/LoginAndResetJS.js"></script>
    <script>
        var urlResetPassword = '@Url.Action("ResetPassword", "User")';
        var urlLogin = '@Url.Action("Login", "User")';
    </script>
}
