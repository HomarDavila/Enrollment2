
@{
    Layout = "~/Views/Shared/_Layout-Principal-English.cshtml";
    ViewBag.Ruta = @Url.Action("Index", "Principal");
}
<style>
    #Principal {
        position: relative;
        color: white;
    }


    /*.titulo--principal {
        color: #0089b5;
        font-size: 4.2em;
        margin: 0.1em 0 0.5em;
    }*/

    #Principal {
        height: 430px;
        width: 100%;
        overflow: hidden;
    }

    #imgPrincipal {
        min-width: 100%;
        object-fit: cover;
    }

    ul {
        list-style-type: square;
    }

    .carousel-caption-custom {
        position: absolute;
        right: 15%;
        bottom: 105px;
        /*left: 15%;*/
        z-index: 10;
        padding-top: 20px;
        padding-bottom: 20px;
        color: #fff;
        text-align: center;
        text-shadow: 0 1px 2px rgba(0, 0, 0, .6);
    }
</style>

<main>
    <div class="clearfix"></div>
    <div class="container">
        <div class="row" id="Principal">
            <img id="imgPrincipal" class="d-none d-lg-block" src="~/wwwroot/assets/img/Principal.jpg" style="width:100%; max-height:500px; overflow:hidden">
            <img id="imgPrincipal" class="d-none d-md-block d-lg-none" src="~/wwwroot/assets/img/Principal-m.jpg" style="width:100%; max-height:500px; overflow:hidden">
            <img id="imgPrincipal" class="d-md-none" src="~/wwwroot/assets/img/Principal-m2.jpg" style="width:100%; max-height:500px; overflow:hidden">
            <div class="card-body center-left">
                <h2 class="titulo--principal align-middle">
                    <span>YOU CHOOSE</span>
                    <br />
                    <span>your insurer</span>
                </h2>
            </div>
        </div>
        <br />
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-5 col-lg-5  nopadding d-none d-lg-block">
                <img src="~/wwwroot/assets/img/Principal2.jpg" style="width:100%; height:100%;">
            </div>
            <div class="col-md-7 col-lg-7 nopadding">
                <div class="card-body card__principal h-100">
                    <div class="text-left" style="font-size:1em;">
                        <p class="titulo--secundario">The Annual Open Enrollment will be from November 1st thru December 15 2020.</p>
                        <p>During those 45 days you can change insurer, if you want, by <a href=@Url.Action("ChangeMco","Principal")>clicking here.</a> If you wish to stay with your current insurer,  you do not have to make any changes.</p>
                        <ul class="texto--contenido" style="line-height:25px;">
                            <li>If you are only trying to change or update your PMG or PCP, please contact your insurer directly.</li>
                            <li>If your are looking for information about your medical ID card, you can call your insurer or visit their service centers.  (See below for contact information).</li>
                            <li>TTY service is available at 1-888-984-0128.</li>
                            <li>For information related to recertification appointments, please contact the Medicaid Program at 787-641-4224.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="card-body card__principal">
                <div class="row">
                    <div class="col-xl-2 col-lg-3 titulo--secundario">Insurers:</div>
                    <div class="col texto--color">First Medical 1-844-347-7800, MMM 1-844-336-3331, Menonita 1-866-600-4753,<br /> Triple-S 1-800-981-1352</div>
                </div>
            </div>
        </div>
        <br />
        <h2 class="titulo--principal2 text-center">Choose your Preferred Insurer</h2>
        <div class="row" style="overflow:hidden">
            <div class="col-md-4">
                <div class="tile">
                    <img class="imgOverlayColor" src="~/wwwroot/assets/img/PrincipalSeleccione4.jpg">
                    <div class="texto--principal centered text-center" style="width:75%;">
                        <span class="align-middle">
                            Provider Search
                        </span>
                        <br />
                        <a href=@Url.Action("ProviderSearch","Principal") class="btn btn-primary align-text-bottom">MORE INFO</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="tile">
                    <img class="imgOverlayColor" src="~/wwwroot/assets/img/PrincipalSelecione1.jpg">
                    <div class="texto--principal centered text-center" style="width:75%;">
                        <span class="align-middle">
                            Select your Insurer (MCO)
                        </span>
                        <br />
                        <a href=@Url.Action("ChangeMco","Principal") class="btn btn-primary align-text-bottom">MORE INFO</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="tile">
                    <img class="imgOverlayColor" src="~/wwwroot/assets/img/PrincipalSelecione3.jpg">
                    <div class="texto--principal centered text-center" style="width:75%;">
                        <span class="align-middle">
                            Contact your Insurer (MCO)
                        </span>
                        <br />
                        <a href=@Url.Action("ContactInsurer","Principal") class="btn btn-primary align-text-bottom">MORE INFO</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!--Modal-->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            @*<div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>*@
            <div class="modal-body">
                <div id="news" class="carousel slide" data-ride="carousel">

                    <!-- Indicators -->
                    <ul class="carousel-indicators">
                        <li data-target="#news" data-slide-to="0" class="active"></li>
                        <li data-target="#news" data-slide-to="1"></li>
                    </ul>

                    <!-- The slideshow -->
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/wwwroot/images/ComunicadoMolina.jpg" width="100%" alt="Molina" />
                            @*<h5 class="modal-title" id="exampleModalLongTitle">@ViewBag.ModalTitle</h5>
                                <br />
                                <p>@ViewBag.ModalMsg</p>
                                <p>@ViewBag.ModalMsg2</p>
                                <br />*@
                        </div>
                        <div class="carousel-item">
                            <img src="~/wwwroot/images/Censo2020.jpg" width="100%" alt="Censo 2020" />
                            <div class="carousel-caption-custom">
                                <a href="@ViewBag.UrlCensos" target="_blank" class="bg-dark text-white">Oprima Aquí</a>
                            </div>
                        </div>
                    </div>

                    <!-- Left and right controls -->
                    <a class="carousel-control-prev" href="#news" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#news" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    let enabled = @ViewBag.ModalEnabled.ToString().ToLower();
    if (enabled) {
        $('#exampleModalCenter').modal('toggle');
    }
</script>

