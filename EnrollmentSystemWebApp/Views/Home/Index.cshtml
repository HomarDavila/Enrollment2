                            <div class="card-content">
                                <h3 data-i18n="Index_Configuration">Configuraci\u00f3n</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }
            if (eachOption.Code == "03")
            {
                <div class="col-md-4 col-xs-12">
                    <div class="card horizontal customCard">
                        <div class="ch-grid">
                            <div class="ch-item ch-img-4">
                                <div class="ch-info ch-info-3" onclick="window.location.href = '@Url.Action("Reports", "Person")';">
                                    <img class="img-rounded" src="~/app-assets/assets/images/icon-Search.svg" />
                                </div>
                            </div>
                        </div>
                        <div class="card-stacked">
                            <div class="card-content">
                                <h3 data-i18n="Navbar_searh_report">Reports</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }
            if (eachOption.Code == "04")
            {
                <div class="col-md-4 col-xs-12">
                    <div class="card horizontal customCard">
                        <div class="ch-grid">
                            <div class="ch-item ch-img-2" onclick="window.location.href = '@Url.Action("AdditionalResource", "Home")';">
                                <div class="ch-info ch-info-2">
                                    <img class="img-rounded" src="~/app-assets/assets/images/icon-Search.svg" />
                                </div>
                            </div>
                        </div>
                        <div class="card-stacked">
                            <div class="card-content">
                                <h3 data-i18n="Index_Conselor_Additional_Resources">Recursos Adicionales del Counselor</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }

