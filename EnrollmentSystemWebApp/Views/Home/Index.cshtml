<link href="~/app-assets/assets/css/CustomCards.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        @foreach (var eachOption in ViewBag.listOptions)
        {

            if (eachOption.Code == "01")
            {
                <div class="col-md-4 col-xs-12">
                    <div class="card horizontal customCard">
                        <div class="ch-grid">
                            <div class="ch-item ch-img-1" onclick="window.location.href = '@Url.Action("SearchPerson", "Person")';">
                                <div class="ch-info ch-info-1">
                                    <img class="img-rounded" src="~/app-assets/assets/images/icon-Search.svg" />
                                </div>
                            </div>
                        </div>
                        <div class="card-stacked">
                            <div class="card-content">
                                <h3 data-i18n="Index_Search_Person">Buscar Beneficiario</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }
            if (eachOption.Code == "02")
            {
                <div class="col-md-4 col-xs-12">
                    <div class="card horizontal customCard">
                        <div class="ch-grid">
                            <div class="ch-item ch-img-3" onclick="window.location.href = '@Url.Action("Settings", "Person")';">
