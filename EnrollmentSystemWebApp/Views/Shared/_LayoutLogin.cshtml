            <script>
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
        $(document).ready(function () {

		    var UserSettings = {
			    language: "@Session[SessionHelper.LANGUAGE_SESSION_KEY]",
			    culture: "@Session[SessionHelper.CULTURE_SESSION_KEY]"
		    }
             String.language = UserSettings.language;
		     String.defaultLocale = "@AppConstants.DefaultCulture";
             String.locale = UserSettings.culture;
             i18next.changeLanguage("@Session[SessionHelper.LANGUAGE_SESSION_KEY]");
           });
        function changeLanguage(urlLanguage, language) {
            debugger;
              $.ajax({
                        url: '@Url.Action("ChangeLanguage", "Common")',
                        dataType: 'json',
                        data: {
                            language: language
                        },
                        type: 'GET',
                        async: false,
                        success: function (response) {
                            i18next.changeLanguage(language);
                        },
                        error: function (XMLHttpRequest, textStatus, errorThrown) {
                            alert('Occurrió un error en el translate')
                        }
                    });
           }
            </script>
